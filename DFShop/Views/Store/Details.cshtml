@model DFShop.Models.Product

@{
    ViewBag.Title = "Product - " + Model.ProductName;

}

<h2>@Model.ProductName</h2>
<p>
    <img alt="@Model.ProductName"
         src="@Url.Content(Model.ImagePath)" width="250" height="250" multiple />
</p>
<div id="item-details">
    <p>
        <em>Category:</em>
        @Model.Category.CategoryName
    </p>
    <p>
        <em>Supplier:</em>
        @Model.Supplier.SupplierName
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <button class="btn-dark">
        @Html.ActionLink("Add To Cart", "AddToCart",
        "Cart", new { productID = Model.ProductID }, "")
    </button>
    <text>@Html.DisplayTextFor(model => model.ErrorMessage)</text>
    <div class="fb-comments" data-width="230" data-numposts="5"></div>
</div>

