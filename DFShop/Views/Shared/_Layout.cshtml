<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Don't Fret Music</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header"></div>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="#"><h2>@Html.ActionLink("Don't Fret", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</h2></a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <button type="button" class="btn btn-secondary">@Html.ActionLink("Browse", "Index", "Store")</button>
            </li>
            <li class="nav-item">
                <button type="button" class="btn btn-secondary">@Html.ActionLink("About", "About", "Home")</button>
            </li>
            <li class="nav-item">
                <button type="button" class="btn btn-secondary">@Html.ActionLink("Contact", "Contact", "Home")</button>
            </li>
            @if (User.IsInRole("Store Manager") || User.IsInRole("Assistant Manager"))
            {
                <li class="nav-item">
                    <button type="button" class="btn btn-secondary">@Html.ActionLink("Manage Products", "Index", "Products")</button>
                </li>
            }

            <li class="nav-item">
                <button type="button" class="btn btn--secondary">
                    @{Html.RenderAction("GetCartSummary", "Cart");}
                </button>
            </li>
            <li class="nav-item">
                @Html.Partial("_LoginPartial")
            </li>
        </ul>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dont Fret Music</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("stripe", required: false)

</body>
</html>
